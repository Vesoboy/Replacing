@model ReplaceWord

<form asp-action="DeleteWord" asp-controller="Replace" method="post">
    <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#delWord-@Model.OldSymbol">
        Удалить символ
    </button>

    <div class="modal fade" id="delWord-@Model.OldSymbol" tabindex="-1" role="dialog" aria-labelledby="delModalLabel-@Model.OldSymbol" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="delModalLabel-@Model.OldSymbol">Удалить символ</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">

                    <p>Удалить символ?</p>
                    <div class="form-group">
                        <label asp-for="OldSymbol" class="control-label">Старый символ</label>
                        <input type="text" asp-for="OldSymbol" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewSymbol" class="control-label">Новый символ</label>
                        <input type="text" asp-for="NewSymbol" class="form-control" readonly />
                    </div>
                    <input asp-for="OldSymbol" class="d-none" />

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Да" class="btn btn-light" />
                </div>
            </div>
        </div>
    </div>
</form>